<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  
  </dd>

  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>

    <form action="/update_photo/<%= @the_photo.id %>" method="post">

    <label for="image_field">Image</label>
    <input type="text" name="image_info" id="image_field" value="<%= @the_photo.image %>">

    <label for="caption_field">Caption</label>
    <textarea name="caption_info" id="caption_field"><%= @the_photo.caption %></textarea>

    <button>
    Update photo
    </button>
    </form>
  
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">Delete photo</a>
  </dd>

<h2>Comments</h2>


<table>

  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

<% @the_photo.comments.each do |a_comment| %>
  <tr>
    <td><%= a_comment.commenter.username %></td>
    <td><%=  a_comment.body%></td>
    <td><%=  a_comment.created_at%></td>
  </tr>
<% end %>

</table>



<h3>Add a new comment</h3>

<form action="/add_comment" method="post">

  <label for="photo_id_field">Photo ID</label>
  <input type="text" id="photo_id_field" name="photo_id_info" value="<%= @the_photo.id %>">

  <label for="author_id_field">Author ID</label>
  <input type="text" id="author_id_field" name="author_id_info" placeholder="Enter your author ID">

  <label for="comment_field">Comment</label>
  <textarea name="comment_info" id="comment_field" placeholder="Enter a comment..."></textarea>

  <button>
  Add comment
  </button>

</form>
